{
  "name": "json-file-server",
  "version": "1.0.0",
  "description": "File server for json editor",
  "main": "build/src/index.js",
  "type": "module",
  "engines": {
    "node": ">= 16.13 <17"
  },
  "scripts": {
    "codegen:graphql": "graphql-codegen --config codegen.yml",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "clean": "rimraf coverage build tmp",
    "lint": "eslint . --ext .ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "start:local": "env-cmd -f local.env nodemon -q build/src/index.js",
    "start": "node dist/index.mjs"
  },
  "author": "Robin Seifert",
  "license": "MIT",
  "dependencies": {
    "@apollo/subgraph": "0.3.0",
    "@godaddy/terminus": "^4.10.2",
    "@graphql-tools/code-file-loader": "^7.2.3",
    "@graphql-tools/graphql-file-loader": "^7.3.3",
    "@graphql-tools/load": "^7.5.1",
    "@graphql-tools/merge": "^8.2.2",
    "apollo-datasource-rest": "^3.5.2",
    "apollo-server": "^3.1.2",
    "chokidar": "^3.5.3",
    "cross-fetch": "^3.1.5",
    "env-cmd": "^10.1.0",
    "graphql": "^15.5.1",
    "graphql-type-json": "^0.3.2",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.12",
    "supertest": "^6.2.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typescript": "2.4.8",
    "@graphql-codegen/typescript-operations": "2.3.5",
    "@graphql-codegen/typescript-resolvers": "^2.6.1",
    "@tsconfig/node18": "^1.0.0",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^27.5.0",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "concurrently": "^7.1.0",
    "eslint": "^8.14.0",
    "eslint-plugin-jest": "^26.1.5",
    "jest": "^28.0.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.1",
    "ts-node": "^10.7.0",
    "tslint": "^6.1.3",
    "tsutils": "^3.21.0",
    "typescript": "^4.6.4"
  }
}
